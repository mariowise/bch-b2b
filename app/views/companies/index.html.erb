<%= render "header" %>

<div class="row">
  <div class="col-md-9">

    <div class="panel panel-default">
      <div class="panel-heading panel-heading-toolbox">
        <div class="panel-title">
          Listado
        </div>
        <div class="panel-toolbar">
          <%= link_to new_company_path, :class => "btn btn-success" do %><i class="fa fa-plus"></i> Nuevo<% end %>
        </div>
      </div>
      <div class="panel-body">

        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t(:name, scope: [:helpers, :label, :company]) %></th>
                <th><%= t(:score, scope: [:helpers, :label, :company]) %></th>
                <th><%= t(:rut, scope: [:helpers, :label, :company]) %></th>
                <th><%= t(:category, scope: [:helpers, :label, :company]) %></th>
              </tr>
            </thead>

            <tbody>
              <% @companies.each do |company| %>
              <tr>
                <td>
                  <%= link_to company do %><%= company.name %><% end %>
                </td>
                <td><%= company.score %></td>
                <td><%= company.rut %></td>
                <td><%= company.category %></td>

              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center"><%= will_paginate @companies, renderer: BootstrapPagination::Rails %></div>
      </div>
    </div>

  </div>
  <div class="col-md-3"><%= render "info" %></div>
</div>

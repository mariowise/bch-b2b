<%= form_for(@offer) do |f| %>
<% if @offer.errors.any? %>
<%= render partial: "shared/errors", locals: { resource: @offer } %>
<% end %>

<div class="form-group">
                <%= f.label :product %>
            <%= f.text_field :product, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :title %>
            <%= f.text_field :title, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :description %>
            <%= f.text_field :description, :class => "form-control" %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>

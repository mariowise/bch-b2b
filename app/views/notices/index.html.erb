<% render "header" %>

<div class="row">
  <div class="col-md-9">
    
    <div class="panel panel-default">
      <div class="panel-heading panel-heading-toolbox">
        <div class="panel-title">
          Listado
        </div>
        <div class="panel-toolbar">
          <%= link_to new_notice_path, :class => "btn btn-success" do %><i class="fa fa-plus"></i> Nuevo<% end %>
        </div>
      </div>
      <div class="panel-body">
        
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                                  <th><%= t(:actions, scope: [:helpers, :label, :notice]) %></th>
                                  <th><%= t(:price, scope: [:helpers, :label, :notice]) %></th>
                              </tr>
            </thead>

            <tbody>
              <% @notices.each do |notice| %>
                <tr>
                                        <td><%= notice.actions %></td>
                                        <td><%= notice.price %></td>
                              
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center"><%= will_paginate @notices, renderer: BootstrapPagination::Rails %></div>
      </div>
    </div>

  </div>
  <div class="col-md-3"><%= render "info" %></div>
</div>

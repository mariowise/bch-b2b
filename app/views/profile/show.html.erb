<h1><i class="fa fa-user"></i> Mi perfil</h1>
<p></p>
<br>

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">
			Mi informaci√≥n de perfil
		</div>
		<div class="panel-toolbar">
			<%= link_to profile_edit_path, :class => "btn btn-default" do %> <i class="fa fa-pencil"></i> Editar<% end %>
		</div>
	</div>
	<div class="panel-body">
		<h3>Datos personales</h3>
		<hr>
		<div class="row">
			<div class="col-sm-3">
				<div class="panel panel-default">
					<div class="panel-body">
						<%= image_tag @user.avatar.url(:medium), :class => "wide" %>
					</div>
				</div>
			</div>
			<div class="col-sm-9">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th><%= t(:name, scope: [:helpers, :label, :user]) %></td>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<th><%= t(:lastname, scope: [:helpers, :label, :user]) %></td>
							<td><%= @user.lastname %></td>
						</tr>
						<tr>
							<th><%= t(:phone, scope: [:helpers, :label, :user]) %></td>
							<td><%= @user.phone %></td>
						</tr>
						<tr>
							<th><%= t(:email, scope: [:helpers, :label, :user]) %></td>
							<td><%= @user.email %></td>
						</tr>
						<tr>
							<th><%= t(:birthdate, scope: [:helpers, :label, :user]) %></td>
							<td><%= @user.birthdate %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
